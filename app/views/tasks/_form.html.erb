<%= form_for @task do |f|  %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title, "Task" %><br>
    <%= f.text_field :title, class: "formfield" %>
  </p>

  <p>
    <%= f.label :text, "Description" %><br>
    <%= f.text_area :text, class: "formfield" %>
  </p>
